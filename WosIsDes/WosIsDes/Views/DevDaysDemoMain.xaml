<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WosIsDes.DevDaysDemoMain">
    
    <StackLayout>
        <Image Source="{Binding Thumbnail}"/>
        <Button Text="Take a Picture !" Command="{Binding ButtonTakeImageClickedCommand}"/>
        <Button Text="Picture from Gallary !" Command="{Binding ButtonImageFromGalleryClickedCommand}"/>
        <Button Text="Scan !" Command="{Binding ButtonScanClickedCommand}"/>
    </StackLayout>
    
</ContentPage>